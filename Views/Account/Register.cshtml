@model cars_web.Models.UserRegisterModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="auth-container py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h2 class="text-center mb-4">Регистрация</h2>
                        
                        <form asp-action="Register" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            
                            <div class="form-floating mb-3">
                                <input asp-for="FirstName" class="form-control" placeholder="Иван" />
                                <label asp-for="FirstName">Имя</label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            
                            <div class="form-floating mb-3">
                                <input asp-for="LastName" class="form-control" placeholder="Иван" />
                                <label asp-for="LastName">Фамилия</label>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                                <label asp-for="Email">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <div class="form-floating mb-4">
                                <input asp-for="Password" class="form-control" type="password" placeholder="Пароль" />
                                <label asp-for="Password">Пароль</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <small class="form-text text-muted">Пароль должен содержать не менее 6 символов</small>
                            </div>
                            
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg">Зарегистрироваться</button>
                            </div>
                            
                            <div class="text-center">
                                <p class="mb-0">Уже есть аккаунт? <a asp-action="Login" class="text-decoration-none">Войти</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 