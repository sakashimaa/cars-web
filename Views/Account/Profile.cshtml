@model cars_web.Models.UserProfileViewModel

@{
    ViewData["Title"] = "Профиль пользователя";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mt-4">
                <div class="card-header bg-dark text-white">
                    <h4><i class="fa-solid fa-user me-2"></i>Профиль пользователя</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center mb-4">
                            <div class="bg-light rounded-circle p-3 d-inline-block mb-3">
                                <i class="fa-solid fa-user fa-4x text-secondary"></i>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <tbody>
                                        <tr>
                                            <th><i class="fa-solid fa-envelope me-2"></i>Email:</th>
                                            <td>@Model.Email</td>
                                        </tr>
                                        @if (Model != null && !string.IsNullOrEmpty(Model.FirstName))
                                        {
                                            <tr>
                                                <th><i class="fa-solid fa-user me-2"></i>Имя:</th>
                                                <td>@Model.FirstName</td>
                                            </tr>
                                        }
                                        @if (Model != null && !string.IsNullOrEmpty(Model.LastName))
                                        {
                                            <tr>
                                                <th><i class="fa-solid fa-user me-2"></i>Фамилия:</th>
                                                <td>@Model.LastName</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="d-flex justify-content-end mt-3">
                                <button class="btn btn-primary me-2" disabled>
                                    <i class="fa-solid fa-pen-to-square me-2"></i>Редактировать
                                </button>
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="fa-solid fa-right-from-bracket me-2"></i>Выйти
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>