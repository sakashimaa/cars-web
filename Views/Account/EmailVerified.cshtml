@{
    ViewData["Title"] = ViewBag.Success ? "Email успешно подтвержден" : "Ошибка подтверждения email";
}

<div class="auth-container py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4 text-center">
                        @if (ViewBag.Success)
                        {
                            <div class="mb-4">
                                <i class="fa-solid fa-circle-check text-success" style="font-size: 5rem;"></i>
                            </div>
                            <h2 class="mb-3">Email успешно подтвержден!</h2>
                            <div class="alert alert-success mb-4">
                                <p class="mb-0">Ваш email <strong>@ViewBag.Email</strong> был успешно подтвержден.</p>
                            </div>
                            <p class="mb-4">
                                Теперь вы можете использовать все функции сайта. Благодарим за подтверждение вашей электронной почты!
                            </p>
                        }
                        else
                        {
                            <div class="mb-4">
                                <i class="fa-solid fa-circle-exclamation text-danger" style="font-size: 5rem;"></i>
                            </div>
                            <h2 class="mb-3">Ошибка подтверждения email</h2>
                            <div class="alert alert-danger mb-4">
                                <p class="mb-0">@ViewBag.Error</p>
                            </div>
                            <p class="mb-4">
                                Возможно, ссылка подтверждения устарела или была неверной. Попробуйте запросить новое письмо с подтверждением.
                            </p>
                        }
                        
                        <div class="mt-4">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Перейти на страницу входа</a>
                            
                            @if (!ViewBag.Success)
                            {
                                <form asp-action="SendVerificationEmail" method="post" class="mt-3">
                                    <button type="submit" class="btn btn-outline-secondary">Отправить письмо повторно</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 